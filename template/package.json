{
  "name": "my-asch-contract",
  "version": "1.0.0",
  "description": "My Asch contract.",
  "scripts": {
    "test": "jest"
  },
  "author": "asch",
  "license": "ISC",
  "dependencies": {
    "asch-contract-core": "0.2.10",
    "asch-contract-tslint": "0.2.5",
    "asch-contract-types": "0.2.5"
  },
  "devDependencies": {
    "@types/jest": "23.3.10",
    "jest": "23.6.0",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "typescript": "3.2.1"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "mock.ts"
    ]
  },
  "types": "asch-contract-types"
}
