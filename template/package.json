{
  "name": "my-asch-contract",
  "version": "1.0.0",
  "description": "My Asch contract.",
  "scripts": {
    "test": "jest"
  },
  "author": "asch",
  "license": "ISC",
  "dependencies": {
    "asch-contract-core": "~0.2.32",
    "asch-contract-tslint": "~0.2.11",
    "asch-contract-types": "~0.2.13"
  },
  "devDependencies": {
    "@types/jest": "24.0.4",
    "jest": "24.1.0",
    "ts-jest": "23.10.5",
    "ts-node": "8.0.2",
    "typescript": "3.3.3"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "mock.ts"
    ]
  },
  "types": "asch-contract-types"
}
